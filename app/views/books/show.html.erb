<%= render 'users/list', user: @user %>

  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
    <tbody>
      <tr>
      <td><%= link_to user_path(@book.user_id) do %>
        <%= image_tag @book.user.get_profile_image(100,100), alt: 'name' %>
        <% end %>
        <p><%= link_to @book.user.name, user_path(@book.user_id) %></p></td>
        <td><%= link_to book_path do %>
        <%= @book.title %>
        <% end %></td>
      <td><div class="opinion"><%= @book.body %></td>
      <% if @book.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-success mt-1" %></td>
        <td><%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" =>"本当に消しますか？", class: "btn btn-danger  mt-1" %></td>
      <% end %>
     </tr>
  </tbody>
</table>
</div>
</div>
</div>
</div>
