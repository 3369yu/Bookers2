<div class="container">
   <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
    </ul>
      <% end %>
      
  <div class="row mt-3">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table w-75">
      <tbody>
        <tr>
          <td>neme</td>
          <td><div class="profile-name"><%= @user.name %></div></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><div class="profile-introduction"><%= @user.introduction %></div></td>
        </tr>
      </tbody>
    </table>
    
    <div class="row mb-2">
    <% if @user.id == current_user.id %>
      <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary w-75 mt-2" do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
    <% end %>
    <% if @user.id != current_user.id %>
      <%= link_to user_path(current_user.id), class: "btn btn-outline-secondary w-75 mt-2" do %>
    <i class="fa-solid fa-user-gear"></i>
      <% end %>
    <% end %>
    </div>
    
    <div class="mt-3">
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
        <div>Title</div>
        <%= f.text_field :Title %>
        <div>Opinion</div>
        <%= f.text_area :body %>

      <div><%= f.submit 'Create Book', class:"btn btn-success w-75mt-2" %></div>
      <% end %>
    </div>
    </div>

  <div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
    <thead>
        <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        </tr>
      </thead>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(book.user_id) do %>
      <%= image_tag book.user.get_profile_image(80,80) %>
      <% end %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %>
      <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
  </table>
  </div>
  </div>
</div
