<div class="container">
   <div class="row mt-2 mb-5">
      <div class="col-lg-4 mx-auto">
        <h2>Users info</h2>
          <% if @user.errors.any? %>
            <%= @user.errors.count %> errors prohibited this user from being saved:
            <ul>
              <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
             </ul>
          <% end %>
        <%= form_with model: @user do |f| %>
          <div class="from mb-3">
            <label for="inputName">Name</label>
            <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
          </div>
          <div class="from mb-3">
            <label for="inputImage">Image</label>
            <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
          </div>
          <div class="from mb-3">
            <label for="inputIntroduction">Introduction</label>
            <p><%= f.text_field :introduction, autofocus: true, id:"inputIntroductin" %></p>
          </div>
          <div><%= f.submit "Update Users", class:"btn btn-secondary mt-2" %></div>
          <% end %>
        </div>
    </div>
  </div>