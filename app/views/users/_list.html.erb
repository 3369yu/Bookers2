<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table w-75">
      <tbody>
        <tr>
          <td>neme</td>
          <td><div class="profile-name"><%= @user.name %></div></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><div class="profile-introduction"><%= @user.introduction %></div></td>
        </tr>
      </tbody>
    </table>
    
    <div class="row mb-2">
      <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary w-75 mt-2" do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>
    
    <div class="mt-3">
        <h2>New book</h2>
        <%= form_with model: @books do |f| %>
        <div><%= f.label :Title %></div>
        <%= f.text_field :title %>
        <div><%= f.label :Opinion %></div>
        <%= f.text_area :body %>

      <div><%= f.submit 'Create Book', class:"btn btn-success w-75mt-2" %></div>
      <% end %>
    </div>
    </div>

 